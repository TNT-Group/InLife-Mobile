<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.InLife" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@color/dark_gray</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@android:color/white</item>
        <item name="colorSecondaryVariant">@android:color/black</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->
        <item name="colorAccent">@color/dark_indigo</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorSurface">@color/primary</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="android:colorEdgeEffect">@color/dark_gray</item>

        <!-- Style of toolbars of application -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <!-- Theme for buttons in bottom panel in messenger chat -->
    <style name="Theme.InLife.Buttons" parent="Theme.InLife">
        <item name="iconTint">@color/item_state</item>
        <item name="android:stateListAnimator">@null</item> <!-- Delete shadow -->
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:background">@color/transparent</item> <!-- Delete press animation -->
    </style>

</resources>
